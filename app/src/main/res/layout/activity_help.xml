<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context="zastraitsolutions.b5calendar.SettingsMenu.HelpActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@color/colorAccent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_shape"
            android:layout_margin="20dp"
            >

            <zastraitsolutions.b5calendar.Utils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please write to us at"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"

                ></zastraitsolutions.b5calendar.Utils.CustomTextViewNormal>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/address"


                />
            <zastraitsolutions.b5calendar.Utils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:text="@string/contact_info"
                android:layout_margin="20dp"
                />
            <zastraitsolutions.b5calendar.Utils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/margin_10dp"
                android:text="@string/suport"
                android:textAlignment="center"
                android:textSize="15dp"
                ></zastraitsolutions.b5calendar.Utils.CustomTextViewNormal>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
